@using OuvidoriaAPI.DTO
@using OuvidoriaAPI.Enum
@{
    Layout = "_LayoutOuvidor";
}


@{
    CriarManifestacaoDTO DTO = Model.DTO;
}


@{
    ViewBag.Title = "Registro de Manifestação";

    if (Model.FailMessage != null)
    {
        <script>
            alert("@Model.FailMessage")
        </script>
    }
}


<form enctype="multipart/form-data" asp-controller="Manifestations" asp-action="Register">
    <h2 class="text-center mb-4">Faça aqui sua Manifestação</h2>

    <div class="mb-3">
        <label for="tipoSolicitacao" class="form-label">Tipo de Solicitação:</label>
        <select class="form-select" name="TipoSolicitacao" id="tipoSolicitacao">
            <option value="0">Elogio</option>
            <option value="1">Reclamação</option>
            <option value="2">Sugestão</option>
            <option value="3">Outro</option>
        </select>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input value="@DTO.Nome" type="text" name="Nome" class="form-control" id="nome" placeholder="Digite seu nome" required>
        </div>

        <div class="col-md-6 mb-3">
            <label for="email" class="form-label">E-mail:</label>
            <input value="@DTO.Email" type="email" name="Email" class="form-control" id="email" placeholder="Digite seu e-mail" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="telefoneCelular" class="form-label">Celular:</label>
            <input value="@DTO.Celular" type="tel" name="Celular" class="form-control" id="telefoneCelular" placeholder="(00) 00000-0000" required>
        </div>
    </div>

    <div class="mb-3">
        <label for="perfil" class="form-label">Perfil:</label>
        <select class="form-select" name="Perfil" id="perfil">
            <option value="0">Aluno</option>
            <option value="1">Pai de aluno</option>
            <option value="2">Professor</option>
            <option value="3">Funcionário</option>
            <option value="4">Visitante</option>
        </select>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="campus" class="form-label">Campus:</label>
            <input value="@DTO.Campus" type="text" name="Campus" class="form-control" id="campus" placeholder="Digite o campus" required>
        </div>

        <div class="col-md-6 mb-3">
            <label for="curso" class="form-label">Curso:</label>
            <input value="@DTO.Curso" type="text" name="Curso" class="form-control" id="curso" placeholder="Digite o curso" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="setor" class="form-label">Setor:</label>
            <select class="form-select" name="SetorId" id="perfil">

                @foreach (var setor in Model.Setores)
                {
                    <option value="@setor.Id"> @setor.Nome </option>
                }

            </select>
        </div>
        <div class="col-md-6 mb-3">
            <label for="assunto" class="form-label">Assunto:</label>
            <input value="@DTO.Assunto" type="text" name="Assunto" class="form-control" id="assunto" placeholder="Digite o Assunto" required>
        </div>

    </div>
    <div class="mb-3">
        <label for="manifestacao" class="form-label">Manifestação:</label>
        <p>
            Descreva abaixo o conteúdo de sua manifestação. Seja claro e objetivo.
            Informações pessoais, inclusive identificação, não devem ser inseridas a
            não ser que sejam essenciais para a caracterização da manifestação.
        </p>
        <textarea value="@DTO.Conteudo" class="form-control" name="Conteudo" id="manifestacao" name="manifestacao" rows="5"></textarea>
    </div>
    <div class="mb-3">
        <label for="anexo" class="form-label">Anexar arquivo:</label>
        <input type="file" value="@DTO.AnexoUp" class="form-control" id="anexo" name="AnexoUp">
    </div>



    <button type="submit" class="btn btn-primary float-end">Enviar</button>

</form>


@{
    Layout = "_LayoutInicial";
    ViewBag.Title = "Login";
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4 offset-sm-4 mt-5">
            <h2>Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                </div>
                <div class="form-group">
                    <label for="pwd">Senha:</label>
                    <input type="password" class="form-control" id="senha" placeholder="Enter password" name="senha">
                </div>
               </div>
                <button type="submit" class="btn btn-primary float-end">Logar</button>
            </form>
            <p>Não tem uma conta? <a class="nav-link" asp-area="" asp-controller="Register" asp-action="Index">Registre-se</a></p>

        </div>
    </div>
</div>


